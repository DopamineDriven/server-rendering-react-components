{
	"compilerOptions": {
		"jsx": "react",
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "CommonJS",
		"rootDir": "./src",
		"removeComments": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./_src",
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true
    },
    "include": ["src/**/*"],
	"exclude": ["node_modules", "public", "dist"]
}
